    "version": "0.2.0",
    "configurations": [
        // debug profile for the command django-admin
        {
            "name": "Debug django-admin",
            "type": "debugpy",
            "env": {"PYTHONPATH": "${workspaceFolder}/.venv"},
            "cwd": "${workspaceFolder}/debug_django_admin",
            "request": "launch",
            "justMyCode": false,
            "django": true,
            "console": "integratedTerminal",
            "program": "${file}",
            "args": [
                "startproject",
                "proj"
            ] 
        }
    ]
}